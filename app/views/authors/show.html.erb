<div class="banner">
  <div class="center">
    <h1><%= @author.name %></h1>
    <% if signed_in? %>
      <ul>
        <li><%= link_to "Edit author", edit_author_path(@author) %></li>
        <li><%= link_to "Delete author", author_path(@author), method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <li><%= link_to "Add work", new_author_work_path(@author) %></li>
      </ul>
    <% end %>
  </div>
</div>

<div class="wrapper">
  <% @works.each do |work| %>
    <div class="work">
      <h1><%= link_to work.name, author_work_path(@author, work)%></h1>
      <ul>
        <li>Book 1: The Creation, The Ages of Mankind, The Flood, Deucalion and Pyrrha, Apollo and Daphne, Io, and Phaëton</li>
        <li>Book 2: Phaëton (cont.), Callisto, The Raven and the Crow, Ocyrhoe, Mercury and Battus, The Envy of Aglauros, Jupiter and Europa</li>
      </ul>
    </div>
  <% end %>
</div>
